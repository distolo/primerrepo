<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Locality</th>
      <th>Street</th>
      <th>Number</th>
      <th>Floor</th>
      <th>Department</th>
      <th>Neighborhood</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.locality_id %></td>
        <td><%= address.street %></td>
        <td><%= address.number %></td>
        <td><%= address.floor %></td>
        <td><%= address.department %></td>
        <td><%= address.neighborhood %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

