<h1>Listing budget_categories</h1>

<table>
  <thead>
    <tr>
      <th>Budget</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @budget_categories.each do |budget_category| %>
      <tr>
        <td><%= budget_category.budget_id %></td>
        <td><%= budget_category.name %></td>
        <td><%= link_to 'Show', budget_category %></td>
        <td><%= link_to 'Edit', edit_budget_category_path(budget_category) %></td>
        <td><%= link_to 'Destroy', budget_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

